echo "PRE-COMMIT: Running TypeScript type check..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "Type check failed. Please fix the errors before committing."
  exit 1
fi

echo "PRE-COMMIT: Running lint and format on staged files..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo "Linting or formatting failed. Please fix the errors before committing."
  exit 1
fi

echo "âœ… All checks passed!"